<% if current_user.admin %>
  <p><%=link_to "New Attraction", new_attraction_path %></p>
<%end%>

<%@attractions.each do |attraction| %>
  <p><%=attraction.name%></p>
  <%if current_user.admin %>
    <p><%=link_to "Edit", edit_attraction_path(attraction)%></p>
    <p><%=link_to "Show #{attraction.name}", attraction_path(attraction) %></p>
  <%else%>
  <p><%=link_to "Go on #{attraction.name}", attraction_path(attraction) %></p>
  <%end%>
<%end%>
